<%= form_for :category, url: categories_path, method: :post do |form|  %>
  <div class='form_field'>
    <%= form.label :name %>
    <%= form.text_field :name, class: 'category_name_field' %>
  </div>
  <div class='form_field'>
    <%= form.label :icon %>
    <%= form.text_field :icon, class: 'category_icon_field' %>
  </div>
  <%= form.submit "Submit" %>
<% end %>